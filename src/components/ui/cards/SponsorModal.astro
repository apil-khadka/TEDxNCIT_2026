---
interface Props {
  sponsor: any
  tier: 'gold' | 'silver' | 'bronze' | 'community'
}

const { sponsor, tier } = Astro.props

// Tier-based styling with proper hierarchy and red/gold theme
const tierModalStyles = {
  gold: {
    border: 'border-red-400 dark:border-red-500',
    borderHover: 'hover:border-red-500 dark:hover:border-red-400',
    badge:
      'bg-gradient-to-r from-red-500 via-red-600 to-amber-600 text-white font-bold',
    button:
      'bg-gradient-to-r from-red-600 to-amber-600 hover:from-red-700 hover:to-amber-700 text-white font-semibold shadow-xl hover:shadow-2xl hover:shadow-red-500/50 dark:from-red-500 dark:to-amber-500 dark:hover:from-red-600 dark:hover:to-amber-600 transform hover:scale-105',
    accent: 'text-red-600 dark:text-red-400',
    titleGradient:
      'bg-gradient-to-r from-red-600 via-red-500 to-amber-600 bg-clip-text text-transparent dark:from-red-400 dark:via-red-300 dark:to-amber-400',
    backdrop: 'bg-gradient-to-br from-black/85 via-red-950/30 to-black/85',
    cardBg: 'bg-white dark:bg-neutral-900',
    textPrimary: 'text-gray-900 dark:text-gray-50',
    textSecondary: 'text-gray-700 dark:text-gray-300',
    glow: 'shadow-[0_0_120px_rgba(239,68,68,0.4)] dark:shadow-[0_0_150px_rgba(248,113,113,0.3)]',
    iconBg: 'bg-red-100 dark:bg-red-900/30',
    iconColor: 'text-red-600 dark:text-red-400',
    divider: 'via-red-400/50 dark:via-red-600/30',
  },

  silver: {
    border: 'border-gray-300 dark:border-gray-400',
    borderHover: 'hover:border-gray-200 dark:hover:border-gray-300',
    badge:
      'bg-gradient-to-r from-gray-100 via-gray-200 to-gray-300 text-gray-900 font-bold shadow-lg',
    button:
      'bg-gradient-to-r from-gray-300 to-gray-400 hover:from-gray-200 hover:to-gray-300 text-gray-900 font-semibold shadow-xl hover:shadow-2xl hover:shadow-gray-300/60 dark:from-gray-400 dark:to-gray-500 dark:hover:from-gray-300 dark:hover:to-gray-400 dark:text-gray-900 transform hover:scale-105',
    accent: 'text-gray-600 dark:text-gray-200',
    titleGradient:
      'bg-gradient-to-r from-gray-400 via-gray-300 to-gray-500 bg-clip-text text-transparent dark:from-gray-200 dark:via-gray-100 dark:to-gray-300',
    backdrop: 'bg-gradient-to-br from-black/85 via-gray-800/30 to-black/85',
    cardBg: 'bg-white dark:bg-neutral-900',
    textPrimary: 'text-gray-900 dark:text-gray-50',
    textSecondary: 'text-gray-700 dark:text-gray-300',
    glow: 'shadow-[0_0_120px_rgba(229,231,235,0.6)] dark:shadow-[0_0_150px_rgba(209,213,219,0.4)]',
    iconBg: 'bg-gray-100 dark:bg-gray-700/50',
    iconColor: 'text-gray-500 dark:text-gray-300',
    divider: 'via-gray-300/60 dark:via-gray-500/40',
  },

  bronze: {
    border: 'border-orange-400 dark:border-orange-500',
    borderHover: 'hover:border-orange-500 dark:hover:border-orange-400',
    badge:
      'bg-gradient-to-r from-orange-500 via-amber-600 to-orange-600 text-white font-semibold',
    button:
      'bg-gradient-to-r from-orange-600 to-amber-700 hover:from-orange-700 hover:to-amber-800 text-white font-medium shadow-lg hover:shadow-xl hover:shadow-orange-500/40 dark:from-orange-500 dark:to-amber-600 dark:hover:from-orange-600 dark:hover:to-amber-700 transform hover:scale-105',
    accent: 'text-orange-600 dark:text-orange-400',
    titleGradient:
      'bg-gradient-to-r from-orange-600 to-amber-600 bg-clip-text text-transparent dark:from-orange-400 dark:to-amber-400',
    backdrop: 'bg-gradient-to-br from-black/85 via-orange-950/20 to-black/85',
    cardBg: 'bg-white dark:bg-neutral-900',
    textPrimary: 'text-gray-900 dark:text-gray-50',
    textSecondary: 'text-gray-700 dark:text-gray-300',
    glow: 'shadow-[0_0_80px_rgba(249,115,22,0.3)] dark:shadow-[0_0_100px_rgba(251,146,60,0.2)]',
    iconBg: 'bg-orange-100 dark:bg-orange-900/30',
    iconColor: 'text-orange-600 dark:text-orange-400',
    divider: 'via-orange-400/50 dark:via-orange-600/30',
  },

  community: {
    border: 'border-indigo-300 dark:border-indigo-700',
    borderHover: 'hover:border-indigo-400 dark:hover:border-indigo-600',
    badge:
      'bg-gradient-to-r from-indigo-400 to-purple-500 text-white font-normal',
    button:
      'bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-600 hover:to-purple-700 text-white font-normal shadow-md hover:shadow-lg hover:shadow-indigo-500/20 dark:from-indigo-600 dark:to-purple-700 dark:hover:from-indigo-500 dark:hover:to-purple-600 transform hover:scale-[1.02]',
    accent: 'text-indigo-500 dark:text-indigo-500',
    titleGradient:
      'bg-gradient-to-r from-indigo-500 to-purple-500 bg-clip-text text-transparent dark:from-indigo-500 dark:to-purple-500',
    backdrop: 'bg-gradient-to-br from-black/85 via-indigo-950/10 to-black/85',
    cardBg: 'bg-white dark:bg-neutral-900',
    textPrimary: 'text-gray-900 dark:text-gray-50',
    textSecondary: 'text-gray-700 dark:text-gray-400',
    glow: 'shadow-[0_0_50px_rgba(99,102,241,0.15)] dark:shadow-[0_0_60px_rgba(129,140,248,0.12)]',
    iconBg: 'bg-indigo-50 dark:bg-indigo-900/20',
    iconColor: 'text-indigo-500 dark:text-indigo-500',
    divider: 'via-indigo-300/40 dark:via-indigo-700/25',
  },
}

const style = tierModalStyles[tier]
---

<!-- Fullscreen Modal Backdrop -->
<div
  id={`modal-${sponsor.id}`}
  class="animate-fadeIn fixed inset-0 z-[9999] flex hidden items-center justify-center p-4"
  onclick={`if(event.target === event.currentTarget) window.closeSponsorModal('${sponsor.id}')`}
>
  <!-- Backdrop with blur and gradient -->
  <div class={`absolute inset-0 backdrop-blur-md ${style.backdrop}`}></div>

  <!-- Modal Content -->
  <div
    class={`relative ${style.cardBg} rounded-2xl ${style.glow} max-w-3xl w-full transform transition-all duration-300 animate-slideUp border-2 ${style.border} overflow-hidden`}
  >
    <!-- Close Button -->
    <button
      onclick={`window.closeSponsorModal('${sponsor.id}')`}
      class="group absolute right-4 top-4 z-10 flex h-10 w-10 items-center justify-center rounded-full bg-gray-100 transition-all duration-200 hover:scale-110 hover:bg-gray-200 dark:bg-neutral-800 dark:hover:bg-neutral-700"
      aria-label="Close modal"
    >
      <svg
        class="h-5 w-5 text-gray-600 transition-colors group-hover:text-gray-900 dark:text-gray-400 dark:group-hover:text-gray-200"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <div class="p-8 md:p-10">
      {/* Header Section */}
      <div
        class="mb-6 flex flex-col items-center gap-6 md:flex-row md:items-start"
      >
        {/* Logo */}
        {/* Logo */}
        <div
          class="flex h-32 w-32 flex-shrink-0 items-center justify-center overflow-hidden rounded-xl bg-gradient-to-br from-gray-100 to-gray-200 shadow-inner dark:from-neutral-800 dark:to-neutral-700"
        >
          <img
            src={sponsor.img.src}
            alt={sponsor.name}
            class="h-full w-full object-cover"
          />
        </div>

        {/* Title & Badge */}
        <div class="flex-grow text-center md:text-left">
          <div class="mb-3">
            <span
              class={`inline-block px-4 py-1.5 rounded-full text-xs uppercase tracking-wider ${style.badge} shadow-md`}
            >
              {sponsor.type}
            </span>
          </div>
          <h3
            class={`text-3xl md:text-4xl font-bold mb-2 ${style.titleGradient}`}
          >
            {sponsor.name}
          </h3>
          <p
            class={`text-sm uppercase tracking-wide font-semibold ${style.accent}`}
          >
            {tier} Sponsor
          </p>
        </div>
      </div>

      {/* Divider */}
      <div
        class={`mb-6 h-px bg-gradient-to-r from-transparent to-transparent ${style.divider}`}
      ></div>

      {/* Description */}
      <div class="mb-8">
        <p
          class={`text-base leading-relaxed md:text-lg ${style.textSecondary}`}
        >
          {sponsor.longDescription}
        </p>
      </div>

      {/* Action Button */}
      <div class="flex justify-center md:justify-start">
        <a
          href={sponsor.url}
          target="_blank"
          rel="noopener noreferrer"
          class={`inline-flex items-center gap-2 px-6 py-3 rounded-xl transition-all duration-300 ${style.button}`}
        >
          <span>Visit Website</span>
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(30px) scale(0.95);
      opacity: 0;
    }
    to {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }

  .animate-fadeIn {
    animation: fadeIn 0.2s ease-out;
  }

  .animate-slideUp {
    animation: slideUp 0.3s ease-out;
  }
</style>
