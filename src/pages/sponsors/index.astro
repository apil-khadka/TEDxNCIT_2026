---
import MainLayout from '@/layouts/MainLayout.astro';
import MainSection from '@components/ui/blocks/MainSection.astro';
import SponsorSection from '@components/sections/misc/SponsorSection.astro';
// Note: We don't need SponsorGrid anymore as SponsorSection handles the 'community' tier layout internally now.
import { goldSponsors, silverSponsors, bronzeSponsors, communitySponsors } from '@data/sponsors';
import { SITE } from '@/data_files/constants';

const pageTitle: string = `Sponsors | ${SITE.title}`;
---

<MainLayout title={pageTitle}>
  <MainSection 
    title="Our Esteemed Sponsors" 
    subTitle="Click on any sponsor to view details and visit their website." 
    btnExists={false} 
  />

  <div class="mx-auto max-w-[1400px] px-4 py-10 sm:px-6 lg:px-8 space-y-24 mb-20">
    
    {/* GOLD - Large, 1 per view */}
    {goldSponsors.length > 0 && (
      <SponsorSection 
        title="Gold Sponsors" 
        sponsors={goldSponsors} 
        tier="gold" 
      />
    )}

    {/* SILVER - Medium, 2 per view */}
    {silverSponsors.length > 0 && (
      <SponsorSection 
        title="Silver Sponsors" 
        sponsors={silverSponsors} 
        tier="silver" 
      />
    )}

    {/* BRONZE - Small, 3 per view */}
    {bronzeSponsors.length > 0 && (
      <SponsorSection 
        title="Bronze Sponsors" 
        sponsors={bronzeSponsors} 
        tier="bronze" 
      />
    )}

    {/* COMMUNITY - Grid Layout (No Swiper) */}
    {communitySponsors.length > 0 && (
      <SponsorSection 
        title="Community Sponsors" 
        sponsors={communitySponsors} 
        tier="community" 
      />
    )}
    
  </div>
</MainLayout>
